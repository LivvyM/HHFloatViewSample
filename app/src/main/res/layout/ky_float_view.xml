<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="204dp"
    android:layout_height="44dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/float_spread_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        />

    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/module_one_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/module_one_iv"
                android:layout_width="18dp"
                android:layout_height="22dp"
                />

            <TextView
                android:id="@+id/module_one_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/module_one_red_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="26dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/module_two_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="22dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            />

    </FrameLayout>

    <ImageView
        android:id="@+id/float_spread_iv_right"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="right"
        android:visibility="gone"/>


</LinearLayout>